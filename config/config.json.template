    "ping": {
      "_comment": "PingIdentity configuration example",
      "postman_team_name": "enterprise",
      "idp_config": {
        "idp_type": "ping",
        "integration_id": "YOUR_CONNECTION_ID"
      }
    }
  },
  
  "_finding_integration_id": {
    "okta": [
      "1. In Okta Admin, go to Applications > YOUR_POSTMAN_APP",
      "2. Look at the SAML configuration or SSO URL",
      "3. Find the ID that Postman uses (often a long hex string)"
    ],
    "azure": [
      "1. In Azure Portal, go to Enterprise Applications > Postman",
      "2. Go to Properties tab",
      "3. Copy the 'Object ID' (NOT the Application ID)",
      "4. Format: a96eb820-ee73-4b66-9680-436e67bfa4be"
    ],
    "ping": [
      "1. In PingIdentity, find your Postman SAML connection",
      "2. Copy the Connection ID"
    ]
  }
}